{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NoteSequence",
  "type": "object",
  "required": ["notes", "totalTime"],
  "properties": {
    "notes": {
      "type": "array",
      "maxItems": 20000,
      "items": {
        "type": "object",
        "required": ["pitch", "startTime", "endTime"],
        "properties": {
          "pitch": { "type": "integer", "minimum": 0, "maximum": 127 },
          "startTime": { "type": "number", "minimum": 0 },
          "endTime": { "type": "number", "minimum": 0 },
          "velocity": { "type": "integer", "minimum": 0, "maximum": 127 },
          "instrument": { "type": "integer", "minimum": 0, "maximum": 15 },
          "program": { "type": "integer", "minimum": 0, "maximum": 127 }
        }
      }
    },
    "tempos": { "type": "array", "items": { "type": "object" } },
    "timeSignatures": { "type": "array", "items": { "type": "object" } },
    "totalTime": { "type": "number", "minimum": 0 }
  }
}
