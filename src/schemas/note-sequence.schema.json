{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NoteSequence",
  "type": "object",
  "required": ["notes"],
  "properties": {
    "notes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["pitch", "startTime", "endTime"],
        "properties": {
          "pitch": {
            "type": "integer",
            "minimum": 0,
            "maximum": 127
          },
          "startTime": {
            "type": "number",
            "minimum": 0
          },
          "endTime": {
            "type": "number",
            "minimum": 0
          },
          "velocity": {
            "type": "integer",
            "minimum": 0,
            "maximum": 127
          },
          "instrument": {
            "type": "integer",
            "minimum": 0,
            "maximum": 15
          },
          "program": {
            "type": "integer",
            "minimum": 0,
            "maximum": 127
          },
          "isDrum": { "type": "boolean" }
        },
        "additionalProperties": false
      },
      "maxItems": 20000
    },
    "tempos": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["time", "qpm"],
        "properties": {
          "time": { "type": "number", "minimum": 0 },
          "qpm": { "type": "number", "minimum": 1 }
        },
        "additionalProperties": false
      }
    },
    "timeSignatures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["time", "numerator", "denominator"],
        "properties": {
          "time": { "type": "number", "minimum": 0 },
          "numerator": { "type": "integer", "minimum": 1 },
          "denominator": { "type": "integer", "minimum": 1 }
        },
        "additionalProperties": false
      }
    },
    "totalTime": { "type": "number", "minimum": 0 }
  },
  "additionalProperties": false
}
